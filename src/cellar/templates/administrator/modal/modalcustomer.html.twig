{% spaceless %}
    <div class="page-wrapper">
        <a class="btn btn-sm btn-default trigger" style="/* margin-top: 235px; */float: left;"
           href="javascript:">Mostrar
            productos</a>
    </div>
    <div class="modal-wrapper">
        <div class="modal">
            <div class="content">
                <div id="no-more-tables">
                    <table class="table table-responsive text-center">
                        <thead class="cf">
                        <tr class="tr-h">
                            <td class="numeric">Número de producto</td>
                            <td class="numeric">Categoria de Producto</td>
                            <td class="numeric">Nombre de Producto</td>
                            <td class="numeric">Precio</td>
                            <td class="numeric">Máximo descuento</td>
                            <td class="numeric">Cantidad stock <a class="btn-close trigger"
                                                                  href="javascript:"></a>
                            </td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}

                            <tr>
                                <td data-title="Nro  producto">
                                    <div class="">{{ product.id|e|title }}</div>
                                </td>
                                <td data-title="Categoria de Producto">
                                    <div class="">{{ product.categoryname|e|title }}</div>
                                </td>
                                <td data-title="Nombre de Producto">
                                    <div class="">{{ product.productName|e|title }}</div>
                                </td>
                                <td data-title="Precio">
                                    <div class="">{{ product.productPrice|e }}</div>
                                </td>
                                <td data-title="Máximo descuento">
                                    <div class="">{{ product.productMaxDiscount|e }}</div>
                                </td>
                                <td data-title="Cantidad stock">
                                    {% if  product.productStockQuantity %}
                                        <div class="">{{ product.productStockQuantity|e }}</div>
                                    {% else %}
                                        <div class="label label-danger">{{ 'Sin stock'|trans }}</div>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endspaceless %}
